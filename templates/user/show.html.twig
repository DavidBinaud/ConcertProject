{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-evenly">
        <a class="btn btn-primary" href="{{ path('user_profile_edit') }}" type="link">{{ "content.profile.edit"|trans }} <i class="bi bi-pencil"></i></a>
        <a class="btn btn-primary" href="{{ path('user_profile_edit_password') }}" type="link">{{ "content.profile.password_edit"|trans }} <i class="bi bi-key"></i></a>
        {% include('user/_delete_form.html.twig') %}
    </div>
{% endblock %}
