<form method="post" action="{{ path('band_delete', {'id': band.id}) }}" onsubmit="return confirm('Are you sure you want to delete this band?');" style="display: inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ band.id) }}">
    <button class="btn btn-primary"><i class="bi bi-trash"></i></button>
</form>
